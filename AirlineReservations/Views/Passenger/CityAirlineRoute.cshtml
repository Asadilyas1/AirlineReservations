@model IEnumerable<AirlineReservations.Models.CityRoute>

<br />
<center>
    <p>Ruta orașului companiei aeriene</p>
</center>
<br />

<div class="container">
    <div class="col-md-12">

        <div class="row">

            @foreach (var item in Model)
            {
              
                <div class="col-md-6">
                    <div class="card">

                        <div class="card-body">

                           
                            <table class="table table-hover table-bordered">
                                <tr class="text-center">
                                    <th>Ruta orașului companiei aeriene De la</th>
                                    <th>Compania aeriană Ruta orașului către</th>
                                    <th>Selectați </th>
                                </tr>
                                <tr class="text-center">
                                    <td>
                                        @item.RouteFromCity
                                    </td>
                                    <td>
                                        @item.RouteToCity
                                    </td>
                                    <td>

                                        <a class="btn btn-warning " href="@Url.Action("BookingTicket","Passenger",new { Id=item.AirlineId,Rid=item.RouteId})">Alegere</a>
                                        
                                      
                                    </td>
                                </tr>
                            </table>

                        </div>
                    </div>

                </div>
                
            }
            
        </div>
        <br />
    </div>


</div>