@model IEnumerable<AirlineReservations.Models.Airline>

@{
    ViewData["Title"] = "Index";
}


<br />
<br />
<h4 class="text-center">
    Lista companiilor aeriene
</h4>
<br />

<div class="container">

    <div class="col-md-12">

        <div class="row">
            <div class="col-md-8 offset-2" >
                <div class="card">

                    <div class="card-header">
                        <a class="btn btn-success" asp-action="Create">Creaza nou</a>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover table-bordered">
                            <thead>
                                <tr class="text-center">
                                    <th>
                                        @Html.DisplayNameFor(model => model.Airlinecode)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AirlineName)
                                    </th>
                                    <th>Acțiune</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="text-center">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Airlinecode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AirlineName)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Editați</a>

                                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">
                                                Șterge
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

