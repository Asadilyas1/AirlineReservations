@model AirlineReservations.Models.BookingClass

@{
    ViewData["Title"] = "Edit";
}

<br />
<br />


<div class="container">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-7 offset-2">
                <div class="card">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="text-center"> Edit Class Type</h5>  
                        </div>
                        <div class="card-body">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                <div class="form-group">
                                    <label asp-for="ClassTpye"  class="control-label"></label>
                                    <input asp-for="ClassTpye" class="form-control" />
                                    <span asp-validation-for="ClassTpye" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input style="margin-top:20px" type="submit" value="Update" class="btn btn-warning" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
