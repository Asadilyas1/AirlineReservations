@model IEnumerable<AirlineReservations.Models.BookingClass>

@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<h5 class="text-center">Listați tipul clasei companiei aeriene</h5>
<br />

<div class="container">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-8 offset-2">
                
                    <div class="card">
                        <div class="card-header">
                            <a class="btn btn-success" asp-action="Create">Create New</a>
                        </div>
                        <div class="card-body">
                            <table class="table table-hover table-bordered">
                                <thead>
                                    <tr class="text-center">
                                        <th>
                                            @Html.DisplayNameFor(model => model.ClassTpye)
                                        </th>
                                        <th>Acțiune</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="text-center">
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ClassTpye)
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editați </a> 
                                              
                                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Șterge</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
               
            </div>
        </div>
    </div>
</div>


