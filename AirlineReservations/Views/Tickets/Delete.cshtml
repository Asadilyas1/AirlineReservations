@model AirlineReservations.Models.Tickets

@{
    ViewData["Title"] = "Delete";
}

<br />
<br />
<div class="container">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6 offset-2">
                <div class="card">

                    <div class="card-header">
                        <h5>Sigur doriți să ștergeți acest lucru?</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.TicketFrom)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.TicketFrom)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.TicletTo)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.TicletTo)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.TimeFrom)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.TimeFrom)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.TimeTo)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.TimeTo)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.TotalSeata)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.TotalSeata)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.SinglePrice)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.SinglePrice)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.TwoWaysPrice)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.TwoWaysPrice)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Airline)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Airline.AirlineName)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.bookingClass)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.bookingClass.ClassTpye)
                            </dd>
                        </dl>
                        <hr />
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Șterge" class="btn btn-danger" /> 
                           
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



